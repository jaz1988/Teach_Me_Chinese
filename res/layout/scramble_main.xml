<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FFFFFF" >

     <LinearLayout
	        android:id="@+id/LLSpinner"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="10dp"
	        android:layout_width="wrap_content"
		     android:layout_height="wrap_content" >
	
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:text="Subjects: "
	            android:textSize="16dp"
	            android:textStyle="bold" />
	        
		     <Spinner
			     android:id="@+id/spinner1"
			     android:layout_width="wrap_content"
			     android:layout_height="wrap_content" />
	
	     </LinearLayout>
	     
    <LinearLayout
        android:id="@+id/LinearTop"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/item_body"
        android:layout_below="@+id/tv_scramble_count"
        android:layout_marginTop="10dp" >

        <LinearLayout
            android:id="@+id/RL1"
            android:layout_width="50dp"
            android:layout_height="60dp"      
            android:gravity="center" >         
            <RelativeLayout
	            android:id="@+id/RL111"
	            android:layout_width="40dp"
	            android:layout_height="50dp"
	            android:background="@drawable/item_body"
	            android:gravity="center" >
  			</RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/RL2"
            android:layout_width="50dp"
            android:layout_height="60dp"    
            android:gravity="center" >
            <RelativeLayout
	            android:id="@+id/RL111"
	            android:layout_width="40dp"
	            android:layout_height="50dp"
	            android:background="@drawable/item_body"
	            android:gravity="center" >
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/RL3"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:gravity="center" >      
            <RelativeLayout
	            android:id="@+id/RL111"
	            android:layout_width="40dp"
	            android:layout_height="50dp"
	            android:background="@drawable/item_body"
	            android:gravity="center" >
              </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearBot"
        android:background="@drawable/item_body"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/LinearTop"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:id="@+id/RL4"
            android:layout_width="50dp"
            android:layout_height="60dp"
     		android:gravity="center" >
            <RelativeLayout
	            android:id="@+id/RL111"
	            android:layout_width="40dp"
	            android:layout_height="50dp"
	            android:background="@drawable/item_body"
	            android:gravity="center" >
	            <TextView
	                android:id="@+id/TextView01"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="我" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/RL5"
            android:layout_width="50dp"
            android:layout_height="60dp"       
            android:gravity="center" >
            <RelativeLayout
	            android:id="@+id/RL111"
	            android:layout_width="40dp"
	            android:layout_height="50dp"
	            android:background="@drawable/item_body"
	            android:gravity="center" >
	            <TextView
	                android:id="@+id/TextView01"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="佷" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/RL6"
            android:layout_width="50dp"
            android:layout_height="60dp"    
            android:gravity="center" >

            <RelativeLayout
	            android:id="@+id/RL111"
	            android:layout_width="40dp"
	            android:layout_height="50dp"
	            android:background="@drawable/item_body"
	            android:gravity="center" >
	            <TextView
	                android:id="@+id/TextView01"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="好" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/header_list"
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_below="@+id/LinearBot"
         > 
		
        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold"
        android:background="@drawable/item_body" 
        android:padding="5dp" 
        android:text="Chinese" 
        android:layout_weight="1.3" />
        
        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold"
        android:background="@drawable/item_body" 
        android:padding="5dp" 
        android:text="Pin Yin" 
        android:layout_weight="1.7" />
        
        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold"
        android:background="@drawable/item_body" 
        android:padding="5dp" 
        android:text="English" 
        android:layout_weight="1.7" />
        
        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold"
        android:background="@drawable/item_body" 
        android:padding="5dp" 
        android:text="Audio" 
        android:layout_weight="1" />
        
        
	</LinearLayout>
	
    <ListView
        android:id="@+id/scramble_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_list"
        android:text="hello" />

    <TextView
        android:id="@+id/tv_scramble_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/LLSpinner"
        android:text="1/10"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/result"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/LinearTop"
        android:padding="5dp"
        android:layout_toRightOf="@+id/LinearTop"
        android:src="@drawable/cross" />

    <Button
        android:id="@+id/next"
        style="@style/ButtonText"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:layout_alignBaseline="@+id/tv_scramble_count"
        android:layout_alignBottom="@+id/tv_scramble_count"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_blue"
        android:onClick="onClick"
        android:text="Next"
        android:textSize="18dp" />

    <Button
        android:id="@+id/previous"
        style="@style/ButtonText"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:layout_alignBaseline="@+id/tv_scramble_count"
        android:layout_alignBottom="@+id/tv_scramble_count"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="11dp"
        android:background="@drawable/btn_blue"
        android:onClick="onClick"
        android:text="Previous"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/tv_scramble_count"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/tv_scramble_count"
        android:src="@drawable/right" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/tv_scramble_count"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/tv_scramble_count"
        android:src="@drawable/left" />

    <ImageView
        android:id="@+id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/LinearBot"
        android:layout_alignLeft="@+id/result"
        android:clickable="true"
        android:onClick="onClick"
        android:padding="5dp"
        android:src="@drawable/answer_icon" />

</RelativeLayout>