<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/results"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/ll_subjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/results"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/subjects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Subject:"
            android:textSize="16dp" />

        <Spinner
            android:id="@+id/spinner_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/test_scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/results_breakdown"
        android:layout_below="@+id/ll_subjects"
        android:padding="10dp"
        android:text="Test scores:"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btn_show_scores"
        style="@style/ButtonText"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ll_subjects"
        android:layout_toRightOf="@+id/test_scores"
        android:background="@drawable/btn_blue"
        android:onClick="onClick"
        android:text="Show"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/last_test_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/results_breakdown"
        android:layout_below="@+id/test_scores"
        android:padding="10dp"
        android:text="Last test results:"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btn_show_last_test_results"
        style="@style/ButtonText"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/test_scores"
        android:layout_toRightOf="@+id/last_test_results"
        android:background="@drawable/btn_blue"
        android:onClick="onClick"
        android:text="Show"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/results_breakdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/last_test_results"
        android:padding="10dp"
        android:text="Results breakdown:"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btn_show_breakdown"
        style="@style/ButtonText"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/last_test_results"
        android:layout_toRightOf="@+id/results_breakdown"
        android:background="@drawable/btn_blue"
        android:onClick="onClick"
        android:text="Show"
        android:textSize="18dp" />

    <!-- SCROLLVIEW -->

    <ViewFlipper
        android:id="@+id/vfContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/results_breakdown"
        android:layout_marginTop="10dp" >

        <!-- ITEM 1 -->

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/item_body"
                        android:padding="5dp"
                        android:text="Date"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/item_body"
                        android:padding="5dp"
                        android:text="Attempt"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/item_body"
                        android:padding="5dp"
                        android:text="Score"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/test_score_container"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_body"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/subject"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/item_body"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="01/02/2013"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/score"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="1"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/score"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/item_body"
                        android:padding="5dp"
                        android:text="2/5 (20%)"
                        android:textSize="18dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- ITEM 2 -->

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <LinearLayout
                android:id="@+id/last_score_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/chinese"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_body_list"
                    android:padding="10dp"
                    android:text="1. æˆ‘"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/choice1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_body"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/alpha"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/item_body"
                        android:gravity="center"
                        android:text="A"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/meaning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:text="I;Me"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/choice2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_body"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/alpha"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/item_body"
                        android:gravity="center"
                        android:text="A"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/meaning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:text="I;Me"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/choice3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_body"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/alpha"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/item_body"
                        android:gravity="center"
                        android:text="A"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/meaning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:text="I;Me"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/choice4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_body"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/alpha"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/item_body"
                        android:gravity="center"
                        android:text="A"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/meaning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:text="I;Me"
                        android:textSize="18dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- ITEM 3 -->

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/sort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Sort By:"
                        android:textSize="16dp" />

                    <Spinner
                        android:id="@+id/spinner_sort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/item_body"
                        android:padding="5dp"
                        android:text="Chinese"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/item_body"
                        android:padding="5dp"
                        android:text="Score"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/breakdown_container"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_body"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/subject"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/item_body"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="æˆ‘"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/score"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/item_body"
                        android:padding="5dp"
                        android:text="2/5 (20%)"
                        android:textSize="18dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </ViewFlipper>

</RelativeLayout>